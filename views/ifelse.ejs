<%- include('layout.ejs'); %>
  <style>
    .grid-container {
        background: white;
        display:block;
        border: 1px solid black;
      }
    .grid {
      display: grid;
      grid-template-columns: repeat(5, 80px);
      grid-template-rows: repeat(5, 80px);
      grid-gap: 5px;
    }
    .cell {
      /* center the cell content */
      justify-content: center;
      align-items: center;
      display: flex;
      font-family: Arial;
      font-size: 3rem;
      font-weight: bold;
      background: white;
      border: 1px solid black;
      border-radius: 10px;
    }
    .col{
      float: left;
      width:  50%;
    }
  </style>
  <div class="row">
    <div class="col" style="column-width: 30%;">
      <div class="row">
        <div class="col-lg-3">
          <h3 class="text-center">Blocks</h3>
        </div>
        <div class="col-lg-8 ms-auto">
          <h3 class="text-center">Scripts Zone</h3>
        </div>
      </div>
      <div id="blocklyDiv" style="height: 480px; width: 600px;"></div>
    </div>

    <div class="col">
      <h3 class="text-center">Map</h3>
      <div class="grid-container" >
        <div class="grid">
          <div class="cell" id="1" style="background-color: green; background-image: url(image/car.jpg); background-size: contain; background-repeat: no-repeat; background-position: center;"></div>
          <div class="cell" id="2"></div>
          <div class="cell" id="3"></div>
          <div class="cell" id="4"></div>
          <div class="cell" id="5" style="background-color: black;"></div>
          <div class="cell" id="6" style="background-color: black;"></div>
          <div class="cell" id="7" style="background-color: black;"></div>
          <div class="cell" id="8" style="background-color: black;"></div>
          <div class="cell" id="9"></div>
          <div class="cell" id="10" style="background-color: black;"></div>
          <div class="cell" id="11" style="background-color: black;"></div>
          <div class="cell" id="12" style="background-color: black;"></div>
          <div class="cell" id="13"></div>
          <div class="cell" id="14"></div>
          <div class="cell" id="15" style="background-color: black;"></div>
          <div class="cell" id="16" style="background-color: black;"></div>
          <div class="cell" id="17" style="background-color: black;"></div>
          <div class="cell" id="18"></div>
          <div class="cell" id="19" style="background-color: black;"></div>
          <div class="cell" id="20" style="background-color: black;"></div>
          <div class="cell" id="21" style="background-color: black;"></div>
