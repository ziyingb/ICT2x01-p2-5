      </div>
      <div class="container mt-2">
          <div class="row">
            <div class="col-lg-6">
              <button type="button" class="btn btn-primary btn-lg" style="width:100%;">Download</button>
            </div>
            <div class="col-lg-6 ms-auto text-right">
              <button type="button" class="btn btn-danger btn-lg" style="width:100%;" onclick="runCode()">Run</button>
            </div>
          </div>
          <h3 class="pt-2">Status: DISCONNECTED</h3>
      </div>

    </div>
  </div>
  
  <xml id="toolbox" style="display: none">
    <category name="Logic">
      <block type="move_forward">
      </block>
      <block type="move_backward">
      </block>
      <block type="sensor_power">
      </block>
      <block type="path_direc">
      </block>
      <block type="controls_repeat_ext">
        <value name="TIMES">
          <shadow type="math_number">
            <field name="NUM">2</field>
          </shadow>
        </value>
      </block>
      <block type="delay">
        <field name="Time">0</field>
        <field name="Move">forward</field>
      </block>
      <block type="motor_turn">
        <field name="direction">right</field>
      </block>
      <block type="controls_if" id="t$L|90_!azL--[_^OrWt" x="12" y="38"></block>
    </category>
  </xml>
  <script>
    var workspace = Blockly.inject('blocklyDiv',
        {media: '../../media/', toolbox: document.getElementById('toolbox')});

    function runCode(){
      window.LoopTrap = 1000;
      Blockly.JavaScript.INFINITE_LOOP_TRAP = 
        'if (--window.LoopTrap == 0) throw "Infinite loop.";\n';
      var code = Blockly.JavaScript.workspaceToCode(workspace);
      Blockly.JavaScript.INFINITE_LOOP_TRAP = null;
      eval(code);
      /*try{
        eval(code);
      } catch(e) {
        alert("out of bound. please restart");
      }*/
    }
  </script>
  <script src="https://unpkg.com/blockly@6.20210701.0/blockly.min.js"></script>
  <script src="/js/customblocks_ifelse.js"></script>
