<%- include('layout.ejs'); %>
<script src="https://unpkg.com/blockly@6.20210701.0/blockly.min.js"></script>
<script type="text/javascript" src="/js/blocklysettings.js"></script>
<script type="text/javascript" src="/js/tutorial.js"></script>

<%- include('tutorial.ejs'); %>
<section>
  <div class="container-fluid">
    <div class="row">
      <div class="col">
        <div class="row">
            <div class="col-lg-3">
                <h3 class="text-center">Blocks</h3>
            </div>
            <div class="col-lg-8 ms-auto">
                <h3 class="text-center">Scripts Zone</h3>
            </div>
          </div>
        <div id="blocklyDiv" class="pb-4" style="height: 600px; width:100%"></div>
      </div>

      <div class="col">
        <h3 class="text-center">Map</h3>
        <img src="/images/map.png" class="img-fluid" style="width:100%; height:60%;" alt="map">
        <div class="container mt-2">
            <div class="row">
              <div class="col-lg-6">
                <button type="button" class="btn btn-primary btn-lg" style="width:100%;">Download</button>
              </div>
              <div class="col-lg-6 ms-auto text-right">
                <button type="button" class="btn btn-danger btn-lg" style="width:100%;">Run</button>
              </div>
            </div>
            <h3 class="pt-2">Status: DISCONNECTED</h3>
        </div>

      </div>
    </div>
  </div>
</section>

<xml
  xmlns="https://developers.google.com/blockly/xml"
  id="toolbox"
  style="display: none"
>
  <block type="controls_ifelse"></block>
  <block type="logic_compare"></block>
  <block type="logic_operation"></block>
  <block type="controls_repeat_ext">
    <value name="TIMES">
      <shadow type="math_number">
        <field name="NUM">10</field>
      </shadow>
    </value>
  </block>
  <block type="logic_operation"></block>
  <block type="logic_negate"></block>
  <block type="logic_boolean"></block>
  <block type="logic_null" disabled="true"></block>
  <block type="logic_ternary"></block>
  <block type="text_charAt">
    <value name="VALUE">
      <block type="variables_get">
        <field name="VAR">text</field>
      </block>
    </value>
  </block>
</xml>
