<%- include('layout.ejs'); %>
<%- include('projectModal.ejs'); %>

<div class="container">
  <div class="row justify-content-center">

    <div class="card-deck pt-5 pb-5">
      <% for (var i=0; i<3; i++) { %>
      <div class="card border border-info pt-2">
        <a href="/getProjectChallenges/<%= projects[i]._id%>">
          <h5 class="card-title text-center stretched-link"><%= projects[i].projectName %></h5>
          <img class="card-img-top" src="images/logoinsta.png" width="100" height="180" alt="Card image cap" />
          <div class="card-body">
            <p class="card-text">
              <%= projects[i].projectDesc %>
            </p>
          </div>
        </a>
      </div>
      <% } %>
    </div>
    <div class="card-deck pb-5">
      <% for (var i=3; i<6; i++) { %>
      <div class="card border border-info pt-2">
        <a href="#">
          <h5 class="card-title text-center stretched-link"><%= projects[i].projectName %></h5>
          <img class="card-img-top" src="images/logoinsta.png" width="100" height="180" alt="Card image cap" />
          <div class="card-body">
            <p class="card-text">
              <%= projects[i].projectDesc %>
            </p>
          </div>
        </a>
      </div>
      <% } %>

    </div>
  </div>
</div>


<% for (var i=0; i< projects.length; i++) { %>
<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          EXAMPLE TUTORIAL
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">CLOSE</button>
          <button type="button" class="btn btn-primary">BEGIN</button>
        </div>
      </div>
    </div>
</div>
<% } %>


